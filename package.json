{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "shadcn-preact",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "format": "turbo format",
    "lint": "turbo lint",
    "postinstall": "simple-git-hooks"
  },
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "target": "es2020",
  "author": {
    "name": "LiasCode",
    "email": "liascode.dev@gmail.com",
    "url": "https://lias-code.pages.dev"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/node": "^22.17.1",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint && pnpm run format"
  }
}
